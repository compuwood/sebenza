<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/navigation_footer_height"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/employee_profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@null" />

                <FrameLayout
                    android:id="@+id/employee_profile_picture_edit_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:visibility="gone"
                    android:background="#55232323">

                    <ImageView
                        android:id="@+id/employee_profile_picture_edit_button"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/camera_icon" />

                </FrameLayout>

            </FrameLayout>

            <ImageView
                android:id="@+id/employee_profile_editmode_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="-36dp"
                android:layout_marginTop="-36dp"
                android:src="@drawable/edit_circle_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <ViewSwitcher
                    android:id="@+id/employee_profile_full_name_switcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/employee_profile_full_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                    <EditText
                        android:id="@+id/employee_profile_full_name_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:textSize="30dp" />
                </ViewSwitcher>

                <LinearLayout
                    android:id="@+id/employee_review_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <io.techery.properratingbar.ProperRatingBar
                        android:id="@+id/average_review_ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        app:prb_clickable="true"
                        app:prb_defaultRating="0"
                        app:prb_tickNormalDrawable="@drawable/star_empty"
                        app:prb_tickSelectedDrawable="@drawable/star_full"
                        app:prb_totalTicks="5" />

                    <TextView
                        android:id="@+id/employee_profile_total_reviews_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/nice_blue"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/employee_profile_phone_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/call_icon" />

                    <ViewSwitcher
                        android:id="@+id/employee_profile_phone_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/employee_profile_phone_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/montserrat_light"
                            android:textColor="@color/almost_black"
                            android:textColorLink="@color/almost_black"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/employee_profile_phone_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/montserrat_light"
                            android:textColor="@color/black"
                            android:textSize="16dp" />
                    </ViewSwitcher>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/employee_profile_email_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/mail_icon" />

                    <ViewSwitcher
                        android:id="@+id/employee_profile_email_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/employee_profile_email_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/montserrat_light"
                            android:textColor="@color/almost_black"
                            android:textColorLink="@color/almost_black"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/employee_profile_email_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/montserrat_light"
                            android:textColor="@color/almost_black"
                            android:textSize="16dp" />
                    </ViewSwitcher>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/employee_profile_skills_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="SKILLS &amp; EXPERIENCE"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Experience is listed below in years"
                        android:textColor="@color/star_dust"
                        android:textSize="12dp" />

                    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/skills_flexbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:alignContent="stretch"
                        app:alignItems="stretch"
                        app:flexWrap="wrap" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/employee_profile_address_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="ADDRESS"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/employee_profile_address_pencil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/edit_icon"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/employee_profile_address_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/jumbo"
                        android:textSize="16dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/black" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/employee_payment_details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="PAYMENT INFO"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/employee_profile_payment_pencil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/edit_icon"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/employee_profile_payment_info_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/jumbo"
                        android:textSize="16dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/black" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/employee_profile_reviews_preview_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/employee_profile_reviews_preview_header_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="REVIEWS"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/employee_profile_reviews_preview_image"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_below="@+id/employee_profile_reviews_preview_header_textview"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/profile_pic_large" />

                    <io.techery.properratingbar.ProperRatingBar
                        android:id="@+id/employee_profile_top_review_ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/employee_profile_reviews_preview_image"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/employee_profile_reviews_preview_image"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        app:prb_clickable="false"
                        app:prb_defaultRating="0"
                        app:prb_tickNormalDrawable="@drawable/star_empty"
                        app:prb_tickSelectedDrawable="@drawable/star_full"
                        app:prb_totalTicks="5" />

                    <TextView
                        android:id="@+id/employee_profile_reviews_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/employee_profile_reviews_preview_image"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-3dp"
                        android:layout_toRightOf="@+id/employee_profile_top_review_ratingbar"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Great nanny!"
                        android:textColor="@color/fuscous_gray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/employee_profile_reviews_preview_reviewer_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/employee_profile_top_review_ratingbar"
                        android:layout_below="@+id/employee_profile_top_review_ratingbar"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Mad Max on January 24 2016"
                        android:textColor="@color/dim_gray"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/employee_profile_reviews_preview_work_done_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/employee_profile_top_review_ratingbar"
                        android:layout_below="@+id/employee_profile_reviews_preview_reviewer_textview"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Work Done: "
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/employee_profile_reviews_preview_work_done_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/employee_profile_reviews_preview_reviewer_textview"
                        android:layout_toRightOf="@+id/employee_profile_reviews_preview_work_done_title"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/dim_gray"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/employee_profile_reviews_preview_review_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/employee_profile_reviews_preview_image"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:lineSpacingExtra="5dp"
                        android:textColor="@color/jumbo"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/employee_profile_reviews_preview_read_all_reviews_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/employee_profile_reviews_preview_review_description"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:lineSpacingExtra="5dp"
                        android:text="Read All Reviews"
                        android:textColor="@color/jelly_bean"
                        android:textSize="16dp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <mad.apps.sabenza.ui.widget.navigationfooter.NavigationFooter
        android:id="@+id/employee_profile_navigation_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:isEmployerFooter="false" />

</RelativeLayout>