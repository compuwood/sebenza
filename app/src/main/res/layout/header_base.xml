<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:paddingBottom="30dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:showIn="@layout/employer_signup">

    <ImageView
        android:id="@+id/back_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/back_arrow"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/employer_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/employer_header_subtitle"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/asap_regular"
        android:textColor="@color/white"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/employer_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/employer_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp" />
</RelativeLayout>