<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_fullscreen"
    >
    <LinearLayout
        android:id="@+id/layout_role_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="60dp">

        <ImageView
            android:id="@+id/splash_sabenza_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/sabenza_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/asap_regular"
            android:text="SEBENZA"
            android:textColor="@color/white"
            android:textSize="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/asap_regular"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="What would you like to do?"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <FrameLayout
            android:id="@+id/goto_employer_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_light"
                android:text="Post a Job"
                android:textColor="@color/nice_blue"
                android:textSize="22dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/goto_employee_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_light"
                android:text="Look for Work"
                android:textColor="@color/nice_blue"
                android:textSize="22dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/goto_login_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center"
                android:text="Already have an account? Login Here"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </FrameLayout>

    </LinearLayout>
</ScrollView>