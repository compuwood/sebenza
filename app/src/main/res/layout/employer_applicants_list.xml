<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <mad.apps.sabenza.ui.widget.headerviewbase.HeaderViewBase
        android:id="@+id/employer_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_small"
        android:background="@drawable/gradient_background_employer"
        app:liftIcon="true"
        app:icon="@drawable/applicant_list_icon"
        app:title="Applicants" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/applicants_list_recycler"
        android:layout_below="@id/employer_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:clipToPadding="false"/>

    <mad.apps.sabenza.ui.widget.ErrorModal
        android:id="@+id/error_modal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <mad.apps.sabenza.ui.widget.LoadingScreen
        android:id="@+id/loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>